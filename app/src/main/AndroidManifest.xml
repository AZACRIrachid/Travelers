<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.travelers">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Travelers"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.MainActivity"
            android:label="Travelers"></activity>
        <activity
            android:name=".presentation.FlightList"
            android:parentActivityName=".presentation.FlightForm" />
        <activity
            android:name=".presentation.FlightForm"
            android:parentActivityName=".presentation.MainActivity" />
        <activity
            android:name=".presentation.Summary"
            android:parentActivityName=".presentation.FlightList" />
        <activity
            android:name=".presentation.Payment"
            android:parentActivityName=".presentation.Summary"></activity>
        <activity
            android:name=".presentation.ThankYou"
            android:parentActivityName=".presentation.Payment"></activity>

        <activity
            android:name=".presentation.SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>